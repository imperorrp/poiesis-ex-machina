  .tooltip-arrow {
    @apply absolute -top-2 left-1/2 transform -translate-x-1/2 
           border-8 border-transparent border-b-zinc-800
           after:content-[''] after:absolute after:-top-[9px] after:left-1/2 
           after:transform after:-translate-x-1/2
           after:border-8 after:border-transparent after:border-b-zinc-700;
  }

  .tooltip-card {
    @apply opacity-0 group-hover:opacity-100 transition-opacity duration-200;
  }

</style>