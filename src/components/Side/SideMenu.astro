---
import SideMenuItem from "./SideMenuItem.astro";
import { sidebarPlaylists } from "../../lib/data";
import SideItemCard from "./SideItemCard.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg">
    <ul>
      <SideMenuItem {title} href="/">Home</SideMenuItem>
    </ul>
  </div>
  <div class="bg-zinc-900 rounded-lg flex-1">
    <ul>
      <SideMenuItem {title}>
        Archetypes
      </SideMenuItem>
    </ul>
    <ul class="pl-2">
      {sidebarPlaylists.map((playlist) => <SideItemCard {playlist} {title}/>)}
    </ul>
  </div>
</div>

<script>
  console.log(`SideMenu component has been loaded`);
</script>